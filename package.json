{
  "name": "flexomatic",
  "version": "0.0.1",
  "description":
    "A flexbox grid system built with styled-components and based on the Solved by Flexbox implementation.",
  "main": "lib/index.js",
  "author": "Jake Wiesler <jakewiesler@gmail.com> (https://www.jakewiesler.com/)",
  "license": "MIT",
  "keywords": [
    "components",
    "ui",
    "react",
    "styled-components",
    "flexbox",
    "grid system",
    "component library"
  ],
  "scripts": {
    "build": "babel src -d lib",
    "clean:lib": "rimraf lib",
    "dev": "yarn clean:lib && babel src -w -d lib --source-maps inline",
    "lint": "eslint src",
    "precommit": "yarn lint && yarn test",
    "prepush": "yarn lint && yarn test",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-styled-components": "^1.5.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.17.0",
    "eslint-plugin-react": "^7.6.1",
    "husky": "^0.14.3",
    "jest": "^22.3.0",
    "jest-styled-components": "^4.11.0-1",
    "react": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "styled-components": "^3.1.6"
  },
  "peerDependencies": {
    "styled-components": "^3.1.6"
  },
  "dependencies": {
    "prop-types": "^15.6.0"
  },
  "jest": {
    "testEnvironment": "jest-environment-node"
  },
  "homepage": "https://github.com/jakewies/flexomatic",
  "repository": {
    "type": "git",
    "url": "https://github.com/jakewies/flexomatic.git"
  },
  "bugs": {
    "url": "https://github.com/jakewies/flexomatic/issues"
  }
}
